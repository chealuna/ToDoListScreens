<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:text="Table of Contents"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/rainbow"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/viewalltasksbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="475dp"
        android:background="@color/pink"
        android:text="View All Tasks"
        android:textSize="25dp"
        app:layout_constrainedWidth=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <Button
        android:id="@+id/viewspecificlistbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="265dp"
        android:background="@color/orange"
        android:text="View Specific List"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addnewtaskbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="336dp"
        android:layout_marginBottom="337dp"
        android:background="@color/yellow"
        android:text="Add a New Task"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/checkofftaskbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="403dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="270dp"
        android:background="@color/green"
        android:text="Check Off Task"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/edittaskbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:background="@color/blue"
        android:text="Edit Task"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/viewbyprioritybutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:layout_marginTop="540dp"
        android:layout_marginBottom="133dp"
        android:background="@color/purple"
        android:text="View By Priority"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <Button
        android:id="@+id/createnewlistbutton"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:background="@color/darkPurple"
        android:text="Create New To-Do List"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="609dp" />


</androidx.constraintlayout.widget.ConstraintLayout>