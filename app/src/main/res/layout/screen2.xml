<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="334dp"
        android:layout_height="57dp"
        android:layout_marginTop="28dp"
        android:text="Table of Contents"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="113dp"
        app:srcCompat="@drawable/rainbow"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="85dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="View All Tasks"
        android:textSize="25dp"
        android:background="@color/pink"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="View Specific List"
        android:textSize="25dp"
        android:background="@color/orange"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="265dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="Add a New Task"
        android:textSize="25dp"
        android:background="@color/yellow"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="336dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="Check Off Task"
        android:textSize="25dp"
        android:background="@color/green"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="403dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="Change Name of Task"
        android:textSize="25dp"
        android:background="@color/blue"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="470dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="Change Date of Task"
        android:textSize="25dp"
        android:background="@color/purple"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="540dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="360dp"
        android:layout_height="58dp"
        android:text="Create New To-Do List"
        android:textSize="25dp"
        android:background="@color/darkPurple"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="609dp" />


</androidx.constraintlayout.widget.ConstraintLayout>