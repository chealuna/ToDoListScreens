<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <!-- Name of Task -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Enter Name: "
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="217dp" />

   <!-- Category Check Boxes -->
    <CheckBox
        android:id="@+id/checkBoxWork"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:text="Work"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="329dp" />

    <CheckBox
        android:id="@+id/checkBoxPersonal"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:text="Personal"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="324dp" />

    <CheckBox
        android:id="@+id/checkBoxOther"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:text="Other"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="329dp" />

    <!-- Priority Check Boxes -->
    <CheckBox
        android:id="@+id/checkBoxUrgent"
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:text="Urgent"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="329dp" />

    <CheckBox
        android:id="@+id/checkBoxInProgress"
        android:layout_width="149dp"
        android:layout_height="44dp"
        android:text="In Progress"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="131dp"
        tools:layout_editor_absoluteY="324dp" />

    <CheckBox
        android:id="@+id/checkBoxDone"
        android:layout_width="104dp"
        android:layout_height="42dp"
        android:text="Done"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="291dp"
        tools:layout_editor_absoluteY="329dp" />

    <!-- Date when task is due -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="390dp"
        android:layout_height="265dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="386dp" />


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/yellow"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="325dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:text="Add a New Task"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="128dp"
        android:layout_height="62dp"
        app:srcCompat="@drawable/rainbow"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="146dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="374dp"
        android:layout_height="459dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Box and Prompt would go here (For user input)"
        android:textSize="17.5dp"
        tools:layout_editor_absoluteX="-473dp"
        tools:layout_editor_absoluteY="386dp" />

    <SearchView
        android:layout_width="395dp"
        android:layout_height="45dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="115dp"
        android:layout_height="61dp"
        android:text="SAVE"
        android:textSize="17.5dp"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="656dp" />

</androidx.constraintlayout.widget.ConstraintLayout>